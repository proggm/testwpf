<Page x:Class="wpftest2.Views.Pages.Page13"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpftest2.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page13">

    <Grid Background="White">
        
        <Button Content="Назад" Height="50" Width="200" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Calendar FirstDayOfWeek="Monday" SelectionMode="SingleDate" HorizontalAlignment="Left">
            <Calendar.BlackoutDates>
                <CalendarDateRange Start="11/11/2011" />
            </Calendar.BlackoutDates>
        </Calendar>
        <DatePicker Width="200" Height="175" HorizontalAlignment="Right" VerticalAlignment="Top" IsDropDownOpen="True" SelectedDateFormat="Short">
        </DatePicker>

    </Grid>
</Page>
